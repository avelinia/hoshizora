{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hoshizora",
  "version": "0.1.0",
  "identifier": "com.hoshizora.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hoshizora",
        "minHeight": 740,
        "minWidth": 1450,
        "maximized": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https://aniwatch-api-v1-0.onrender.com; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}